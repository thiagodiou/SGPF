   <from-outcome>error</from-outcome>
   <to-view-id>/pages/error/500.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 
   <navigation-case>
   <from-outcome>analista</from-outcome>
   <to-view-id>/pages/analista/analista.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  
  <navigation-case>
